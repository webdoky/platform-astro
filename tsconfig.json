{
  "compilerOptions": {
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "jsx": "react",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "plugins": [
      {
        "name": "@astrojs/ts-plugin",
      },
    ],
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    "preprocess"
  ],
  "extends": "astro/tsconfigs/strictest",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./src/**/*.astro",
    "./*.ts"
  ],
}