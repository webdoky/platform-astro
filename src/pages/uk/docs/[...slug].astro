---
import { getCollection, getEntry } from 'astro:content';

import Layout from '../../../layouts/Layout/Layout.astro';

import './[...slug].scss';

export interface Params {
  slug: string;
}

export async function getStaticPaths() {
  const entries = await getCollection('translatedContent');
  return entries.map((entry) => ({
    params: {
      slug: entry.slug,
    },
  }));
}

const { slug } = Astro.params;
const page = await getEntry('translatedContent', slug);
const { Content } = await page.render();
---

<Layout title={page.data.title}>
  <main
    class="wd-doc-page container relative flex flex-wrap justify-start flex-1 w-full bg-ui-background">
    <h1>{page.data.title}</h1>
    <div class="flex flex-wrap items-start justify-start">
      <div class="order-1 w-full md:w-2/3"><Content /></div>
    </div>
  </main>
</Layout>
