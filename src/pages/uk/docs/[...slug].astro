---
import { getCollection, getEntry } from 'astro:content';

import Layout from '../../../layouts/Layout/Layout.astro';
import MetaHead from '../../../components/MetaHead.astro';

export interface Params {
  slug: string;
}

export async function getStaticPaths() {
  const entries = await getCollection('processed-content');
  return entries.map((entry) => ({
    params: {
      slug: entry.slug,
    },
  }));
}

const slug = Astro.params.slug;

const page = await getEntry('processed-content', slug);
const { Content } = await page.render();
const {
  data: { title, section, description },
} = page;
const TARGET_LOCALE = import.meta.env.TARGET_LOCALE;
---

<Layout title={title}>
  <MetaHead
    slot="head"
    title={`${title} ${section ? `— ${section}` : ''} | ВебДоки`}
    description={description}
    canonicalPath={`/${TARGET_LOCALE}/docs/${slug}`}
  />
  <main
    class="wd-doc-page container relative flex flex-wrap justify-start flex-1 w-full bg-ui-background">
    <h1>{title}</h1>
    <div class="flex flex-wrap items-start justify-start">
      <div class="order-1 w-full md:w-2/3"><Content /></div>
    </div>
  </main>
</Layout>
