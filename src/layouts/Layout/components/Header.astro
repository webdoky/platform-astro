---
import { Icon } from 'astro-icon/components';

import Logo from '../../../components/Logo.astro';

import ToggleDarkMode from './ToggleDarkMode.jsx';

const { pathname } = Astro.url;
const NAV = [
  {
    path: '/uk/docs/Web/',
    title: 'Технології',
  },
  { path: '/docs/', title: 'Про проєкт' },
];
const GITHUB_LINK = 'https://github.com/webdoky';
---

<div class="py-2 border-t-2 border-ui-primary">
  <div class="container">
    <div class="flex items-center justify-between -mx-2 sm:-mx-4">
      <div class="flex flex-col items-center px-2 mr-auto sm:px-4 sm:flex-row">
        <a
          href="/"
          class="flex items-center text-ui-primary no-underline"
          title="На головну">
          <Logo width={40} className="text-ui-primary" />
          <span
            class="hidden ml-2 text-xl font-black tracking-tighter sm:block">
            WebDoky
          </span>
        </a>

        <div class="hidden ml-2 mr-5 sm:flex items-center sm:ml-2">
          {
            NAV.map(({ path, title }) => (
              <a
                href={path}
                class:list={[
                  'block p-1 font-medium nav-link text-ui-typo hover:text-ui-primary sm:ml-4 md:whitespace-nowrap no-underline',
                  { active: pathname.startsWith(path) },
                ]}>
                {title}
              </a>
            ))
          }
        </div>
      </div>

      <div class="w-full px-2 sm:px-4 max-w-screen-xs">
        {/* Search */}
      </div>

      <div class="flex items-center justify-end px-2 sm:px-4">
        <a
          aria-label="Ми на GitHub"
          href={GITHUB_LINK}
          class="sm:ml-3 text-ui-typo no-underline"
          target="_blank"
          rel="noopener noreferrer"
          title="Ми на GitHub">
          <Icon name="mdi:github" class="w-6 h-6" />
        </a>

        <ToggleDarkMode client:idle />
      </div>
    </div>
  </div>
</div>
